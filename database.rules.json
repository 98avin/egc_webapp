{
  "rules": {
    ".read": "auth !== null && auth.provider === 'google' 
    && root.child('Admins').child('general').hasChild(auth.token.name)",
    ".write": "auth !== null && auth.provider === 'google' 
    && root.child('Admins').child('general').hasChild(auth.token.name)",
    "Organizations":{
      "$org":{
        "events":{
          "$event":{
            "$date":{
              "attendance":{
                "$attType":{
                  "people":{
                    "$uid":{
                      ".write":"auth.uid === $uid",
                      ".read":"auth.uid === $uid"
                    }
                  }
                }
              }
            }
          }
        },
        "polls":{
          "$pollID":{
            "options":{
              ".write":"auth !== null && auth.provider === 'google'",
              ".red":"auth !== null && auth.provider === 'google'"
            },
            "people":{
              "$uid":{
                ".write":"auth.uid === $uid",
                ".read":"auth.uid === $uid"
              }
            }
          }
        }
      }
    },
    "liveEvents":{
      ".read":"auth !== null && auth.provider === 'google'"
    },
    "livePolls":{
      ".read":"auth !== null && auth.provider === 'google'"
    }
  }
}
